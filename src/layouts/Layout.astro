---
import '../styles/global.css'
import background from '../assets/background.svg';

interface Props {
  title?: string;
}

const { title = 'Astro Basics' } = Astro.props;
---
<!doctype html>
<html lang="en" class="m-0 w-full h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="m-0 w-full h-full bg-base-100 text-base-content">
    <img src={background.src} alt="" class="fixed inset-0 w-full h-full -z-10 blur-[100px]" />
    <slot />
  </body>
</html>
