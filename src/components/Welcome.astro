---
import { getCollection } from 'astro:content';

const peptides = await getCollection('peptides');
---

<main class="h-full flex justify-center items-center">
  <section class="flex flex-col items-center justify-center p-8 md:p-4 md:pt-[10%]">
    <h1 class="text-4xl md:text-5xl font-bold mb-8 text-center text-primary">Peptides</h1>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-6xl w-full">
      {peptides.map((peptide) => (
        <a href={`/${peptide.slug}`} class="card bg-base-100 shadow-xl hover:shadow-2xl transition-all duration-300 hover:-translate-y-1">
          <div class="card-body">
            <h2 class="card-title text-primary">{peptide.data.title}</h2>
            <p class="text-base-content">{peptide.data.description}</p>
            <div class="card-actions justify-end mt-4">
              <span class="badge badge-primary badge-outline">Learn more â†’</span>
            </div>
          </div>
        </a>
      ))}
    </div>
  </section>
</main>
