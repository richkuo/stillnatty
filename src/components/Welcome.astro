---
import { getCollection } from 'astro:content';

const peptides = await getCollection('peptides');
---

<main class="min-h-screen">
  <div class="hero">
    <div class="hero-content">
      <div class="max-w-6xl">
        <h1 class="text-5xl font-bold text-primary">Peptides</h1>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mt-12">
          {peptides.map((peptide) => (
            <a href={`/${peptide.slug}`} class="card card-compact bg-base-100 shadow-xl hover:shadow-2xl transition-all">
              <div class="card-body">
                <h2 class="card-title text-primary">{peptide.data.title}</h2>
                <p>{peptide.data.description}</p>
                <div class="card-actions justify-end">
                  <span class="badge badge-primary badge-outline">Learn more â†’</span>
                </div>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </div>
</main>
